#include <unistd.h>

/**
 * _putchar - writes the character c to stdout
 * @c: The character to print
 *
 * Return: On success 1.
 * On error, -1 is returned, and errno is set appropriately.
 */
int _putchar(int c)
{
	static char buffer[1024];
	static int i;

	if (c == -1)
	{
		printf("\nwriting  %i chars from buffer\n", i);
		(write(1, buffer, i));
		i = 0;
	}
	if (c != -1)
	{
		printf("inserting %c into %i\n",c,i);
		buffer[i] = c;
		i++;
	}
	return (1);
}

/**
 * _puts - prints a string
 * @s: the string
 * Return: no of chars printed
 */
int _puts(char *s)
{
	int i = 0;

	while (s[i] != '\0')
	{
		_putchar(s[i]);
		i++;
	}
	return (i);
}
